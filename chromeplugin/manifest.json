{
    "background": {
       "scripts": [ "request.js" ]
    },
    "description": "Redirects any www.amazon.com page to smile.amazon.com",
    "icons": { "16": "SA-16x16.png",
               "48": "SA-48x48.png",
               "128": "SA-128x128.png" },
    "manifest_version": 2,
    "name": "Smile Always",
    "permissions": [ "webRequest", "webRequestBlocking", "http://www.amazon.com/*", "https://www.amazon.com/*", "http://www.amazon.de/*", "https://www.amazon.de/*", "http://www.amazon.co.uk/*", "https://www.amazon.co.uk/*" ],
    "version": "0.94",
    "homepage_url": "https://www.smilealways.io",
    "author":"Josh Haimson and Dan Elitzer"
}
